<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_pink_ffeef4"
        tools:context=".ui.fragments.SplashFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/flower_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/flower"
            app:lottie_speed="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بنفسچ"
            android:fontFamily="@font/kufi"
            android:textAlignment="center"
            android:textColor="@color/c_purple_5c2a9d"
            android:textSize="@dimen/_56sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flower_animation" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>